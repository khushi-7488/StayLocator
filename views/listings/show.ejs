<% layout("/layouts/boilerplate") -%>
<div class="row">
  <div class="col-8 offset-2">
    <h3 class="mt-3 mb-3"><%= listing.title %></h3>
    <div class="card listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top show-img"
        alt="listing-img"
      />
      <div class="card-body mb-3">
        <p class="card-text"><%= listing.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          Price : &#8377;<%= listing.price.toLocaleString("en-IN") %>
        </li>
        <li class="list-group-item">Location : <%= listing.location %></li>
        <li class="list-group-item">Country : <%= listing.country %></li>
      </ul>
      <div class="card-body">
        <a
          href="/listings/<%= listing._id %>/edit"
          class="card-link btn btn-dark"
          >Edit this listing</a
        >
      </div>
    </div>
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
      <div class="d-grid gap-2 col-6 mx-auto mt-4 mb-4">
        <button class="btn btn-outline-danger button-text" type="submit">
          Delete
        </button>
      </div>
    </form>
  </div>
  <div class="col-8 offset-2">
    <hr />
    <h4>Leave a review</h4>
    <form
      action="/listings/<%=listing._id%>/reviews"
      method="post"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3 mb-3">
        <label for="rating" class="form-label">Rating</label>
        <input
          type="range"
          min="1"
          max="5"
          id="rating"
          name="review[rating]"
          class="form-range"
        />
      </div>
      <div class="mb-3 mb-3">
        <label for="comment" class="form-label">Comments</label>
        <textarea
          name="review[comment]"
          id="comment"
          cols="30"
          rows="5"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">comment here</div>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
    </form>
    <hr />
    <p><b>All Reviews</b></p>
    <div class="row">
      <% for(review of listing.reviews) { %>
      <div class="card col-5 mb-3 ms-3">
        <div class="class-body">
          <h5 class="card-title">khushi</h5>
          <p class="card-text"><%=review.comment%></p>
          <p class="card-text"><%=review.rating%> star</p>
        </div>
        <form
          class="mb-3 mt-2"
          method="post"
          action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
        >
          <button class="btn btn-sm btn-dark">Delete</button>
        </form>
      </div>
      <%}%>
    </div>
  </div>
</div>
